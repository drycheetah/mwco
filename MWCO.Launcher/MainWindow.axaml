<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="700"
        x:Class="MWCO.Launcher.MainWindow"
        Title="MWCO Launcher"
        Width="1100" Height="700"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        Background="#0E0E10">

    <Grid>
        <!-- Background gradient -->
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#0E0E10" Offset="0"/>
                    <GradientStop Color="#1A1A1D" Offset="0.5"/>
                    <GradientStop Color="#0E0E10" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Main Content -->
        <Grid Name="MainContent" RowDefinitions="100,*,80">

            <!-- Top Bar -->
            <Border Grid.Row="0" Background="#12141A" BorderBrush="#2A2D35" BorderThickness="0,0,0,1">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel VerticalAlignment="Center" Margin="40,0">
                        <TextBlock Text="MWCO"
                                  FontSize="32"
                                  FontWeight="Bold"
                                  Foreground="#FFFFFF"
                                  LetterSpacing="2"/>
                        <TextBlock Text="MY WINTER CAR ONLINE"
                                  FontSize="11"
                                  Foreground="#808285"
                                  LetterSpacing="4"
                                  Margin="0,-5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                               Orientation="Horizontal"
                               VerticalAlignment="Center"
                               Margin="40,0">
                        <TextBlock Text="VERSION 0.1.0"
                                  FontSize="10"
                                  Foreground="#505257"
                                  VerticalAlignment="Center"
                                  LetterSpacing="1"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Panel -->
            <Grid Grid.Row="1" Margin="40,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left side - Hero section -->
                <Grid Grid.Column="0">
                    <StackPanel Spacing="25">

                        <!-- Server Section -->
                        <Border Background="#1A1D25"
                               CornerRadius="6"
                               Padding="30,25"
                               BorderBrush="#2A2D35"
                               BorderThickness="1">
                            <StackPanel Spacing="15">
                                <TextBlock Text="SERVER"
                                          FontSize="11"
                                          Foreground="#808285"
                                          LetterSpacing="2"
                                          FontWeight="SemiBold"/>

                                <Grid ColumnDefinitions="Auto,15,*,15,Auto">
                                    <TextBlock Grid.Column="0"
                                              Text="PORT"
                                              VerticalAlignment="Center"
                                              Foreground="#B0B3B8"
                                              FontSize="12"/>

                                    <TextBox Grid.Column="2"
                                            Name="PortTextBox"
                                            Text="1999"
                                            Background="#12141A"
                                            Foreground="#FFFFFF"
                                            BorderBrush="#2A2D35"
                                            Padding="12,8"
                                            FontSize="13"/>

                                    <Button Grid.Column="4"
                                           Name="StartServerButton"
                                           Content="START SERVER"
                                           Click="StartServer_Click"
                                           Background="#0078D4"
                                           Foreground="#FFFFFF"
                                           BorderThickness="0"
                                           Padding="25,12"
                                           CornerRadius="3"
                                           FontWeight="SemiBold"
                                           FontSize="11"
                                           
                                           Cursor="Hand"/>
                                </Grid>

                                <Border Name="ServerStatusBorder"
                                       Background="#12141A"
                                       CornerRadius="4"
                                       Padding="15,10"
                                       BorderBrush="#2A2D35"
                                       BorderThickness="1">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <Ellipse Name="ServerStatusIndicator"
                                                Width="8"
                                                Height="8"
                                                Fill="#505257"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Name="ServerStatusText"
                                                  Text="Server offline"
                                                  Foreground="#808285"
                                                  FontSize="11"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Game Launch Section -->
                        <Border Background="#1A1D25"
                               CornerRadius="6"
                               Padding="30,25"
                               BorderBrush="#2A2D35"
                               BorderThickness="1">
                            <StackPanel Spacing="15">
                                <TextBlock Text="PLAY"
                                          FontSize="11"
                                          Foreground="#808285"
                                          
                                          FontWeight="SemiBold"/>

                                <Button Name="LaunchGameButton"
                                       Content="LAUNCH MY WINTER CAR"
                                       Click="LaunchGame_Click"
                                       Background="#0FA"
                                       Foreground="#000000"
                                       BorderThickness="0"
                                       Padding="0,18"
                                       CornerRadius="3"
                                       HorizontalAlignment="Stretch"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       
                                       Cursor="Hand"/>

                                <TextBlock Text="Press F10 in-game to connect"
                                          FontSize="11"
                                          Foreground="#505257"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Grid>

                <!-- Right side - Status panel -->
                <Border Grid.Column="2"
                       Background="#1A1D25"
                       CornerRadius="6"
                       BorderBrush="#2A2D35"
                       BorderThickness="1">
                    <StackPanel Spacing="20" Margin="25">

                        <TextBlock Text="STATUS"
                                  FontSize="11"
                                  Foreground="#808285"
                                  
                                  FontWeight="SemiBold"/>

                        <!-- Installation Status -->
                        <StackPanel Spacing="12">
                            <TextBlock Text="Installation"
                                      FontSize="10"
                                      Foreground="#505257"
                                      />

                            <Border Background="#12141A"
                                   CornerRadius="4"
                                   Padding="15,12"
                                   BorderBrush="#2A2D35"
                                   BorderThickness="1">
                                <StackPanel Spacing="8">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Ellipse Name="GameStatusIndicator" Width="6" Height="6" VerticalAlignment="Center"/>
                                        <TextBlock Name="GameStatusText"
                                                  Text="Checking..."
                                                  FontSize="10"
                                                  Foreground="#B0B3B8"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Ellipse Name="ModStatusIndicator" Width="6" Height="6" VerticalAlignment="Center"/>
                                        <TextBlock Name="ModStatusText"
                                                  Text="Checking..."
                                                  FontSize="10"
                                                  Foreground="#B0B3B8"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Network Info -->
                        <StackPanel Spacing="12">
                            <TextBlock Text="Network"
                                      FontSize="10"
                                      Foreground="#505257"
                                      />

                            <Border Background="#12141A"
                                   CornerRadius="4"
                                   Padding="15,12"
                                   BorderBrush="#2A2D35"
                                   BorderThickness="1">
                                <StackPanel Spacing="6">
                                    <TextBlock Name="NetworkInfoText"
                                              TextWrapping="Wrap"
                                              FontSize="10"
                                              Foreground="#808285"
                                              LineHeight="16"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Install Mod Button -->
                        <Button Name="InstallModButton"
                               Content="INSTALL MOD"
                               Click="InstallMod_Click"
                               Background="#2A2D35"
                               Foreground="#FFFFFF"
                               BorderThickness="0"
                               Padding="0,12"
                               CornerRadius="3"
                               HorizontalAlignment="Stretch"
                               FontWeight="SemiBold"
                               FontSize="11"
                               
                               Cursor="Hand"
                               Margin="0,10,0,0"/>

                    </StackPanel>
                </Border>

            </Grid>

            <!-- Bottom Bar -->
            <Border Grid.Row="2"
                   Background="#12141A"
                   BorderBrush="#2A2D35"
                   BorderThickness="0,1,0,0">
                <Grid ColumnDefinitions="*,Auto,Auto" Margin="40,0">
                    <TextBlock Grid.Column="0"
                              Name="StatusBarText"
                              Text="Ready"
                              VerticalAlignment="Center"
                              FontSize="11"
                              Foreground="#505257"/>

                    <Button Grid.Column="1"
                           Content="HELP"
                           Click="Help_Click"
                           Background="Transparent"
                           Foreground="#808285"
                           BorderThickness="0"
                           Padding="20,0"
                           FontSize="11"
                           
                           Cursor="Hand"/>

                    <Button Grid.Column="2"
                           Content="EXIT"
                           Click="Exit_Click"
                           Background="Transparent"
                           Foreground="#808285"
                           BorderThickness="0"
                           Padding="20,0"
                           FontSize="11"
                           
                           Cursor="Hand"/>
                </Grid>
            </Border>

        </Grid>

        <!-- Loading Overlay (EAC Style) -->
        <Grid Name="LoadingOverlay"
              Background="#E0000000"
              IsVisible="False"
              ZIndex="1000">
            <Border Background="#12141A"
                   Width="500"
                   Height="250"
                   CornerRadius="8"
                   BorderBrush="#2A2D35"
                   BorderThickness="1">
                <StackPanel VerticalAlignment="Center" Spacing="25">

                    <TextBlock Text="MWCO ANTI-CHEAT"
                              HorizontalAlignment="Center"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="#FFFFFF"
                              />

                    <StackPanel Spacing="15" Margin="60,0">
                        <!-- Progress bar container -->
                        <Border Background="#1A1D25"
                               Height="4"
                               CornerRadius="2"
                               BorderBrush="#2A2D35"
                               BorderThickness="1">
                            <Border Name="LoadingProgressBar"
                                   Background="#0FA"
                                   HorizontalAlignment="Left"
                                   CornerRadius="2"
                                   Width="0"/>
                        </Border>

                        <TextBlock Name="LoadingStatusText"
                                  Text="Initializing..."
                                  HorizontalAlignment="Center"
                                  FontSize="12"
                                  Foreground="#808285"/>
                    </StackPanel>

                    <TextBlock Text="Please wait while we prepare your game"
                              HorizontalAlignment="Center"
                              FontSize="10"
                              Foreground="#505257"
                              />

                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Window>
